<%= render 'shared/page_title', title: "All #{@ingredient.name.capitalize} recipes" %>

<% if @ingredient.recipes.count != 0 %>
  <h4 align="center">Recipes with <%= @ingredient.name %></h4>
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @ingredient_recipes %>
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
<% else %>
  <h4 align="center"><%= @ingredient.name %> does not have any recipies.</h4>
<% end %>