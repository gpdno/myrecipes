<%= render 'shared/page_title', title: "All Chefs" %>

<div align="center">
  <%= will_paginate %>
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
          <li class="chef-title"><%= link_to chef.chefname.capitalize, 
                                         chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></li>
          <li><%= link_to "Delete Chef", chef_path(chef), method: :delete, 
                  data: {confirm: "Are you sure you want to delete the cheft and all associated recipes?"} %></li>

        </div>
      </div>
    </ul>      
  <% end %>
  <%= will_paginate %>
</div>