<h1 align="center">Recipe's listings</h1>
<hr>

<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center">

      </section>
    </div>
    <div class="col-md-8 well">
      <h3><%= recipe.name %></h3>
      <p><%= truncate(recipe.description, length: 50) %></p>
      <p>
        <small><%= time_ago_in_words(recipe.created_at) %></small>
      </p>
    </div>
  </div>
<% end %>